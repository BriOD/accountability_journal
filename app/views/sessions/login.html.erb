<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page_header"> Sign In</h1>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="panel panel-default">
            <div class="panel-heading">
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-lg-6">
                  <%= form_for(@user, url: create_session_path, role: "form")  do |f| %>
                  <div class="form-group">
                    <%= f.label :email %>
                    <%= f.text_field :email, class: "form-control" %>
                     <% if @user.errors[:email].any? %>
                    <p class="help-block-error"><%= @user.errors.full_messages_for(:email).to_sentence %></p>
                    <% else %>
                    <p class="help-block">Enter your email.</p>
                    <% end %>
                  </div>
                  <div class="form-group">
                    <%= f.label :password %>
                    <%= f.password_field :password, class: "form-control" %>
                    <% if @user.errors[:password].any? %>
                   <p class="help-block-error"><%= @user.errors.full_messages_for(:password).to_sentence %></p>
                   <% else %>
                    <p class="help-block">Enter your password.</p>
                    <% end %>
                  </div>

                  <%= f.submit "Sign In", class: "btn btn-default"%>
                  <% end %>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
